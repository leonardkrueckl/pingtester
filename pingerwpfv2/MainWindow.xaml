<Window x:Class="pingerwpfv2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:pingerwpfv2" ResizeMode="NoResize"
        mc:Ignorable="d"
        Title="Ping Tester" Height="150" Width="150">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="28*"/>
            <RowDefinition Height="93*"/>
        </Grid.RowDefinitions>

        <Label HorizontalAlignment="Center" VerticalAlignment="Center">Ping Tester</Label>
        <Label Grid.Row="1" Name="lPing" HorizontalAlignment="Center" VerticalAlignment="Center" DataContextChanged="lPing_DataContextChanged"/>

    </Grid>
</Window>
